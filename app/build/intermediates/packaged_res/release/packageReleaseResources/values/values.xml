<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="bg_input">#F1F3F4</color>
    <color name="bg_screen">#FFFFFF</color>
    <color name="bg_surface">#F5F5F5</color>
    <color name="circle_placeholder">#E0E0E0</color>
    <color name="colorAccent">#1A73E8</color>
    <color name="colorControlHighlight">#F1F3F4</color>
    <color name="colorControlNormal">#5F6368</color>
    <color name="colorPrimary">#FFFFFF</color>
    <color name="colorPrimaryDark">#CCCCCC</color>
    <color name="divider">#DADCE0</color>
    <color name="fab_bg">#FFFFFF</color>
    <color name="nav_text">#5F6368</color>
    <color name="nav_text_selected">#1A73E8</color>
    <color name="text_primary">#202124</color>
    <color name="text_secondary">#5F6368</color>
    <string name="app_name" translatable="false">Barid Mail</string>
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
		
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
		
		
		<item name="android:windowBackground">@color/bg_screen</item>
		<item name="android:textColor">@color/text_primary</item>
		<item name="android:textColorSecondary">@color/text_secondary</item>
		
		<item name="colorControlHighlight">@color/colorControlHighlight</item>
		<item name="colorControlNormal">@color/colorControlNormal</item>
	</style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar"/>
    <style name="AppTheme.DebugActivity" parent="AppTheme">
		<item name="actionBarStyle">@style/ThemeOverlay.MaterialComponents.ActionBar.Primary</item>
		<item name="actionBarTheme">@style/Widget.MaterialComponents.ActionBar.Primary</item>
		<item name="windowActionBar">true</item>
		<item name="windowNoTitle">false</item>
	</style>
    <style name="AppTheme.FullScreen" parent="AppTheme">
		<item name="android:windowFullscreen">true</item>
		<item name="android:windowContentOverlay">@null</item>
	</style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents"/>
</resources>